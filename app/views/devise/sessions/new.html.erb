<div class="container">
  <div class="d-flex justify-content-center mt-5">
    <div class="card cardFormRadius" style="width: 500px;">
      <div class="card-body">
        <h2 class="card-title text-center">Welcome Back</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
          <% if flash[:alert] && flash[:alert].include?("Invalid") %>
            <p class="text-danger">Invalid Email or password.</p>
          <% end %>

          <div class="form-actions text-center my-3">
            <%= f.button :submit, "Log in", class: "btn btn-success btn-lg" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
