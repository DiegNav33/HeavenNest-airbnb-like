<div class="container">
  <div class="d-flex justify-content-center my-5">
    <div class="card cardFormRadius" style="width: 500px;">
      <div class="card-body">
        <h2 class="card-title text-center">Advert Details - General</h2>
        <%= simple_form_for @advert, url: wizard_path, method: :put, html: { multipart: true } do |f| %>
          <%= f.input :category_id, collection: Category.all, label_method: :name, value_method: :id, prompt: "Select a category" %>
          <%= f.input :title, placeholder: "Gorgeous house in beachfront...", input_html: { class: 'form-control' } %>
          <%= f.input :address, placeholder: "123 Georges st...", input_html: { class: 'form-control' } %>
          <%= f.input :city, placeholder: "Fort Lauderdale...", input_html: { class: 'form-control' } %>
          <%= f.input :state, label: "State/Region", placeholder: "Florida...", input_html: { class: 'form-control' } %>
          <%= f.input :postal_code, placeholder: "33301...", input_html: { class: 'form-control' } %>
          <%= f.input :country, as: :country, prompt: "Select your country...", input_html: { class: 'form-control' } %>

          <div class="form-actions text-center">
            <%= f.button :submit, class: "btn btn-success btn-lg", name: "next" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
